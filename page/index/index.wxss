.container {
  height: 100%;
}

/* swiper style */
.swiper-list {
  width: 100%;
  height: 56.25vw;
}
.slide-image {
  width: 100%;
  height: 100%;
}
.swiper-title {
  z-index: 1;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 20px;
}
.swiper-summary {
  z-index: 1;
  position: absolute;
  top: 20px;
  left: 0;
  right: 0;
  bottom: 0;
}

/* content style */
.content-list {
  width: 100%;
}
.content-item {
  width: 100%;
}

/* loading style */
.loadingMore {
  color: grey;
}