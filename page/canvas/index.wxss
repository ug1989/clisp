.container {
  background: rgb(246, 246, 246)
}
.poker-face , .smile-face{
  width: 100%;
  height: 100%;
  position: absolute;
}
.page-body {
  position: relative;
}
.canvas {
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  background-color: teal;
}
.pkItem {
  height: 120rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #eeeeee;
  position: relative;
}
.pkIndex {
  display: inline-block;
  position: absolute;
  top: 0;
  width: 120rpx;
  height: 100%;
  color: #ffffff;
}
.pkIndex text {
  position: absolute;
  left: 0;
  top: 40rpx;
  min-width: 80%;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 15rpx; 
  border-top-right-radius: 25rpx;
  border-bottom-right-radius: 25rpx;
  white-space: nowrap;
}
.pkImage {
  position: absolute;  
  top: 20rpx; 
  left: 170rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.pkDetail {
  position: absolute;
  top: 0;
  height: 120rpx;
  left: 280rpx;
}
.pkNmae {
  position: absolute;
  top: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.pkLevel {
  color: #666666;
  font-size: .65em;
}
.pkAddress {
  position: absolute;
  top: 60rpx;
  color: #777777;
  height: 60rpx;
  font-size: .55em;
  line-height: 60rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.pkItem:first-child {
  height: 220rpx;
  line-height: 220rpx;
}
.pkItem:first-child .pkIndex{
  top: 50rpx;
}
.pkItem:first-child .pkImage {
  top: 70rpx;
  left: 185rpx;
  width: 120rpx;
  height: 120rpx;
}
.kingHeader {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 0rpx;
  left: 185rpx;
}
.pkItem:first-child .pkDetail {
  position: absolute;
  left: 350rpx;
  top: 75rpx;
}
.pkItem:last-child {
  border-bottom: none;
}

.shareButton {
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  width: 100rpx;
  height: 100rpx;
}
.pkShare {
  position: absolute;
  right: 0;
  top: 0;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  background: transparent;
  z-index: 1;
}
.pkShare::after {
  content: none;
}
.shareImage {
  width: 85%;
  height: 85%;
  border-radius: 50%;
}

.sesrchColor {
  margin: 12rpx auto;
  width: 95%;
  height: 76rpx;
}
.sesrchColor input {
  border: 1rpx solid #e1e1e1;
  border-radius: 10rpx;
  padding: 4rpx 8rpx;
  text-align: center;
  height: 56rpx;
  background: #ffffff;
}
.searchIcon {
  position: absolute;
  top: 28rpx;
  left: 5%;
  z-index: 1;
}
.search-placeholder {
  color: #cdcdcd;
  text-align: center;
}
.matchColors {
  position: absolute;
  top: 0;
  left: 0;
  padding: 100rpx 0 0;
  box-sizing: border-box;
  height: 100%;
}
.pokerColorList {
  display: inline-block;
  width: 250rpx;
  height: 250rpx;
  text-align: center;
  overflow: hidden;
}
.pokerColorItem {
  height: 250rpx;
  display: flex;
  font-size: .65em;
  justify-content: center;
  align-items: center;
  color: #fefefe;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.52);
  overflow: hidden;
}
.emptyMsg {
  color: #acacac;
  text-align: center;
  padding: 120rpx;
}

.mockNotifiyBtn {
  margin: 0;
  padding: 0;
  position: relative;
  display: block;
  box-sizing: border-box;
  text-align: left;
  text-decoration:none;
  line-height: 1em;
  border-radius: 0;
  -webkit-tap-highlight-color:transparent;
}
