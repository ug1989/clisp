<view class="container">
  <view class="page-body">
    <canvas class="canvas" canvas-id="myCanvas"
      style="margin: 0; border: none;"
      bindtouchstart="tap"
      bindtouchmove="noop"
      bindtouchend="noop"
      disable-scroll="{{true}}"
    />
  </view>
  <button open-type="share" hidden="{{showShare}}">SHARE</button>
  <view class="pkInfo">
    {{listScore.length}}
    <view wx:for="{{listScore}}" wx:key="listScore" wx:for-index="idx" wx:for-item="item">
      <image style="width: 50px; height: 50px; background-color: #eeeeee;" mode="aspectFit" src="{{item.user && item.user.avatarUrl}}"></image>
      {{item.score}}
    </view>
  </view>
</view>


